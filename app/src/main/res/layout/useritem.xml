<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_i"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profile_i"
            android:text="Username:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/un"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/user"
            android:text="Position:"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profile_i"
            android:maxLines="1"
            android:text="Full Name:"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/un"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/userfname"
            android:maxLines="1"
            android:text="Position:"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userfname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profile_i"
            android:maxLines="1"
            android:text="Type:"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ut"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fn"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/userfname"
            android:maxLines="1"
            android:text="Position:"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>