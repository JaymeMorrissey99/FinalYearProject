        <RelativeLayout
            android:id="@+id/detailslayout"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_below="@id/ll"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/modelttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Model Name:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/modelttl"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modeldetails"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/modelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Model Email:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/me"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/modelEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modeldetails"
                android:padding="10dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/jobtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/me"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Job Title:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/jt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/jobtitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modeldetails"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jobdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Job Description:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/jd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/jobdescription"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modeldetails"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/joblocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Job Location:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/jl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/joblocation"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/modeldetails"
                android:padding="10dp"
                android:textColor="@color/black" />


